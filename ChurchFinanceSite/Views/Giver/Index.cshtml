@model IEnumerable<ChurchFinanceSite.Models.Giver>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Givers</h2>
@Html.ActionLink("Add a New Giver", "New")
@if (!Model.Any())
{
    <text>There are no givers yet.</text>
}
else
{
<table class="table table-striped table-hover" id="givers">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>First Name</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.Middle
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.Address.AddressLine1 @item.Address.AddressLine2 <br />
                    @item.Address.City, @item.Address.State @item.Address.ZipCode
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, null) |
                    @Html.ActionLink("Detail", "Detail", new { id = item.ID }, null) |
                    <button data-giver-id="@item.ID" class="btn-link js-delete">Delete</button>
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.ID }, null) |*@
                </td>
            </tr>
        }
    </tbody>
</table> 
}

@section scripts{
    <script>
        $(document).ready(function () {
            $("#givers .js-delete").on("click", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/givers/" + button.attr("data-giver-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        })
                    }
                });                
            });
        });
    </script>
    }

@model IEnumerable<ChurchFinanceSite.Models.Giver>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Givers</h2>
@if (!Model.Any())
{
    <text>There are no customers yet.</text>
}
else
{
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>First Name</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.Middle
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.Address.AddressLine1 @item.Address.AddressLine2 <br />
                    @item.Address.City, @item.Address.State @item.Address.ZipCode
                </td>
                <td>@Html.ActionLink("Detail", "Detail", new { id = item.ID }, null)</td>
            </tr>
        }
    </tbody>
</table> 
}


@model ChurchFinanceSite.Models.Giver
    
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Contact</h2>
@using (Html.BeginForm("Create", "Giver"))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(c => c.FirstName)
                    @Html.TextBoxFor(c => c.FirstName, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(c => c.Middle)
                    @Html.TextBoxFor(c => c.Middle, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(c => c.LastName)
                    @Html.TextBoxFor(c => c.LastName, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row"> 
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(c => c.Address.AddressLine1)
                    @Html.TextBoxFor(c => c.Address.AddressLine1, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(c => c.Address.AddressLine2)
                    @Html.TextBoxFor(c => c.Address.AddressLine2, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(c => c.Address.City)
                    @Html.TextBoxFor(c => c.Address.City, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(c => c.Address.State)
                    @Html.TextBoxFor(c => c.Address.State, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    @Html.LabelFor(c => c.Address.ZipCode)
                    @Html.TextBoxFor(c => c.Address.ZipCode, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>

}


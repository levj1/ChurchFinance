@model ChurchFinanceSite.ViewModels.DonationViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Donations</h2>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Name</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Donation Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var giver in Model.Givers)
        {
            foreach (var donation in Model.Donations)
            {
                if (giver.ID == donation.GiverID)
                {
                    <tr>
                        <td>@giver.FirstName @giver.Middle @giver.LastName</td>
                        <td>@donation.Amount</td>
                        <td>@donation.DonationType</td>
                        <td>@donation.DonationDate</td>
                    </tr>
                }
            }

        }
    </tbody>
</table> 

